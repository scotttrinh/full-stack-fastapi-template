#!/bin/bash

# Full Stack FastAPI Template - CI Testing
# This script runs all tests in a CI environment with full setup

set -e

echo "ğŸ¤– Running Full Stack FastAPI Template Tests (CI Mode)..."

# Check if required commands are available
if ! command -v gel &> /dev/null; then
    echo "âŒ Error: 'gel' command not found. Please install Gel first."
    exit 1
fi

if ! command -v uv &> /dev/null; then
    echo "âŒ Error: 'uv' command not found. Please install uv first."
    exit 1
fi

if ! command -v npm &> /dev/null; then
    echo "âŒ Error: 'npm' command not found. Please install Node.js first."
    exit 1
fi

# 1. Install all dependencies
echo ""
echo "ğŸ“¦ Installing all dependencies..."

# Install backend dependencies
echo "   ğŸ Installing backend dependencies..."
cd backend
uv sync
cd ..

# Install frontend dependencies
echo "   ğŸ“¦ Installing frontend dependencies..."
cd frontend
npm ci  # Use npm ci for faster, more reliable CI installs
cd ..

echo "âœ… All dependencies installed"

# 2. Initialize Gel project for CI
echo ""
echo "ğŸ—„ï¸  Initializing Gel project for CI..."

# Initialize project if not already initialized
if ! gel project info &>/dev/null; then
    gel project init
    echo "âœ… Gel project initialized"
else
    echo "â„¹ï¸  Gel project already initialized"
fi

# Create minimal .env for CI if it doesn't exist
if [ ! -f ".env" ]; then
    cat > .env << EOF
# CI environment settings
ENVIRONMENT=local
PROJECT_NAME="Full Stack FastAPI Template CI"
GEL_AUTH_SIGNING_KEY=ci-test-key-not-secure
BACKEND_CORS_ORIGINS=http://localhost:5173
EOF
    echo "âœ… Created CI .env file"
fi

echo "ğŸ—„ï¸  Gel daemon ready for CI testing"

# 3. Generate API client
echo ""
echo "ğŸ”§ Generating API client..."
./scripts/generate-client.sh
echo "âœ… API client generated"

# 4. Run backend tests
echo ""
echo "ğŸ Running backend tests..."
cd backend

# Run tests with coverage and JUnit XML output for CI
if uv run pytest \
    --cov=app \
    --cov-report=term-missing \
    --cov-report=html \
    --cov-report=xml \
    --junitxml=test-results.xml \
    -v; then
    echo "âœ… Backend tests passed"
else
    echo "âŒ Backend tests failed"
    cd ..
    exit 1
fi

cd ..

# 5. Run frontend tests
echo ""
echo "ğŸ“¦ Running frontend tests..."
cd frontend

# Run frontend tests with CI-specific settings
if CI=true npm test -- --coverage --watchAll=false; then
    echo "âœ… Frontend tests passed"
else
    echo "âŒ Frontend tests failed"
    cd ..
    exit 1
fi

cd ..

# 6. Run type checking
echo ""
echo "ğŸ” Running type checking..."

# Backend type checking
echo "   ğŸ Backend type checking..."
cd backend
if uv run mypy . --junit-xml=mypy-results.xml; then
    echo "   âœ… Backend type checking passed"
else
    echo "   âŒ Backend type checking failed"
    cd ..
    exit 1
fi
cd ..

# Frontend type checking
echo "   ğŸ“¦ Frontend type checking..."
cd frontend
if npm run type-check 2>/dev/null || npx tsc --noEmit; then
    echo "   âœ… Frontend type checking passed"
else
    echo "   âŒ Frontend type checking failed"
    cd ..
    exit 1
fi
cd ..

# 7. Run linting and formatting checks
echo ""
echo "ğŸ¨ Running code quality checks..."

# Backend linting and formatting
echo "   ğŸ Backend code quality..."
cd backend

# Check formatting
if uv run ruff format --check .; then
    echo "   âœ… Backend formatting is correct"
else
    echo "   âŒ Backend formatting issues found"
    echo "   ğŸ’¡ Run 'uv run ruff format .' to fix"
    cd ..
    exit 1
fi

# Check linting
if uv run ruff check .; then
    echo "   âœ… Backend linting passed"
else
    echo "   âŒ Backend linting failed"
    cd ..
    exit 1
fi

cd ..

# Frontend linting
echo "   ğŸ“¦ Frontend code quality..."
cd frontend

if npm run lint 2>/dev/null || npx eslint src/ --format=junit --output-file=eslint-results.xml; then
    echo "   âœ… Frontend linting passed"
else
    echo "   âŒ Frontend linting failed"
    cd ..
    exit 1
fi

cd ..

# 8. Build frontend to ensure it compiles
echo ""
echo "ğŸ—ï¸  Testing frontend build..."
cd frontend
if npm run build; then
    echo "âœ… Frontend build successful"
else
    echo "âŒ Frontend build failed"
    cd ..
    exit 1
fi
cd ..

echo ""
echo "ğŸ‰ All CI tests completed successfully!"
echo ""
echo "ğŸ“Š CI Test Results Summary:"
echo "   âœ… Dependencies: INSTALLED"
echo "   âœ… Backend tests: PASSED"
echo "   âœ… Frontend tests: PASSED"
echo "   âœ… Type checking: PASSED"
echo "   âœ… Code quality: PASSED"
echo "   âœ… Frontend build: PASSED"
echo ""
echo "ğŸ“ Artifacts generated:"
echo "   ğŸ“Š Backend coverage: backend/htmlcov/index.html"
echo "   ğŸ“Š Backend coverage XML: backend/coverage.xml"
echo "   ğŸ“‹ Backend test results: backend/test-results.xml"
echo "   ğŸ“‹ Backend mypy results: backend/mypy-results.xml"
echo "   ğŸ“¦ Frontend build: frontend/dist/" 